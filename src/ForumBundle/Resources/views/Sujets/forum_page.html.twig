{% extends "base_back.html.twig" %}

{% block content_event %}



   <script>
        function myFunction() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("recherche");
        filter = input.value.toUpperCase();
        table = document.getElementById("recherchetable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[2];
        if (td) {
        txtValue = td.textContent || td.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
        } else {
        tr[i].style.display = "none";
        }
        }
        }
        }
        </script>



        <div class="all-title-box">
        <div class="container">
            <div class="row">
            <div class="col-lg-12">

        <center><div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" name="table_search"id="recherche" onkeyup="myFunction()"class="form-control float-right" placeholder="Search by categorie">
            <div class="input-group-append">
            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
        </div>
        </div>
        </div>
        </div>
            </div>
            </center>
        </header>



            </div>


            <table class="table m-0" id="recherchetable">

                <thead class="thread-dark">
                <tr>
                    <th scope="col">User</th>
                    <th scope="col">Categorie </th>
                    <th scope="col">Sujbect Name</th>
                    <th scope="col" >Subject Description</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in forums   %}
                <tr>
                    <td><a href="pages/examples/invoice.html">{{ entity.user }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.subjectName }}</td>
                    <td>
                        {{ entity.subjectDescription }}
                    </td>
              <td>
                  <a href="{{path('delete',{'id':entity.id})}}" class="white-text d-flex justify-content-end"><h5> Delete <i></i></h5></a>
                  <a href="{{path('update_sujet_Admin',{'id':entity.id})}}" class="white-text d-flex justify-content-end"><h5> Update <i></i></h5></a>
                  <a href="{{path('show_comment_admin',{'id':entity.id})}}" class="white-text d-flex justify-content-end"><h5> Comments <i></i></h5></a>
              </td>
                </tr>
                {% endfor %}






                </tbody>
            </table>


    </h1>

</div>
</tr>

</section>
{% endblock %}





